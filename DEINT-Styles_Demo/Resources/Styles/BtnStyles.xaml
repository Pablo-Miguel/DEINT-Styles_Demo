<?xml version="1.0" encoding="utf-8" ?>
<?xalm-comp compile="true"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="VerticalStackLayout">
        <Setter Property="BackgroundColor" Value="HotPink"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>
    <Style TargetType="Button" x:Key="btnYellow">
        <Setter Property="BackgroundColor" Value="Yellow"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
    <Style TargetType="Button" x:Key="btnYellowAndBold" BasedOn="{StaticResource btnYellow}">
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>
    <Style Class="ButtonText" TargetType="Button">
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>
    <Style Class="LightButton" TargetType="Button">
        <Setter Property="TextColor" Value="Black"/>
    </Style>
    <Style Class="DarkButton" TargetType="Button">
        <Setter Property="TextColor" Value="Grey"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=DarkBlue, Dark=White}" />
    </Style>
    <Style TargetType="Button" x:Key="botonVerde">
        <Setter Property="BackgroundColor" Value="Green"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
</ResourceDictionary>